<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_ice"
            android:layout_width="61dp"
            android:layout_height="44dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/img"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/alram"
            android:layout_width="29dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/img_3" />

        <ImageView
            android:id="@+id/user"
            android:layout_width="49dp"
            android:layout_height="38dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/img_2" />

        <TextView
            android:id="@+id/title_please"
            android:layout_width="226dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginStart="160dp"
            android:layout_marginEnd="160dp"
            android:text="재료 추가"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.353"
            app:layout_constraintStart_toEndOf="@+id/iv_ice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.578" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_dynamic_neutral_variant99"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="육류"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="534dp"
                android:layout_weight="1"

                android:stretchColumns="0,1,2,3">

                <TableRow>

                    <Button
                        android:id="@+id/meat_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_button"

                        android:text="LA 갈비"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_button"
                        android:text="닭고기"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_button"
                        android:text="닭가슴살"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_button"
                        android:text="닭꼬치"
                        app:rippleColor="@drawable/round_button" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/meat_button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_button"

                        android:text="돼지고기"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_button"
                        android:text="돼지앞다리살"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_button"
                        android:text="돼지갈비"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_button"
                        android:text="베이컨"
                        app:rippleColor="@drawable/round_button" />
                </TableRow>
                <TableRow>
                    <Button
                        android:id="@+id/meat_button9"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"

                        android:text="목살"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button10"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:layout_margin="10dp"
                        android:text="소갈비"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button11"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:layout_margin="10dp"
                        android:text="소고기 국거리"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/round_button"
                        android:layout_margin="10dp"
                        android:text="소갈비"
                        app:rippleColor="@drawable/round_button" />
                </TableRow>
                <TableRow>
                    <Button
                        android:id="@+id/meat_button13"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"

                        android:text="소고기"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button14"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:layout_margin="10dp"
                        android:text="소불고기"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button15"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:layout_margin="10dp"
                        android:text="양고기"
                        app:rippleColor="@drawable/round_button" />

                    <Button
                        android:id="@+id/meat_button16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/round_button"
                        android:layout_margin="10dp"
                        android:text="오리고기"
                        app:rippleColor="@drawable/round_button" />
                </TableRow>



            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:layout_weight="4"
                android:orientation="horizontal"

                />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스크롤 뷰 테스트 중입니다."
                android:textSize="150dp">

            </TextView>


        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>